        Username:
        <input type="text" name="username" size="20" placeholder="Username" required><br><br>
        Email:
        <input type="email" name="email" size="20" placeholder="Email" required><br><br>
        Password:
        <input type="password" name="password" size="20" placeholder="Password" required><br><br>
        Foto profilo:
        <input type="file" name="foto"><br><br>
        <input type="submit" value="Crea il mio account" name="signup">

       </form>

