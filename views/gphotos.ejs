<html>
<head>
    <title>Photos from GooglePhotosAPI</title>
</head>
<body>
    <script>
    </script>
    <h1>Pagina <%=numpag%> <h1>
    
    <ul><% for (var i=0; i<info.mediaItems.length; i++){ %>
        
         <li><%= info.mediaItems[i].filename %></li>
        <% var uri = info.mediaItems[i].baseUrl+'=w200-h200'; var width = 200; var height = 200%>
        <li><img src= <%=uri %> width=<%=width%> height=<%=height%>></li>


        <% if (xid!=undefined && xid!=''){ %>
            <form method="GET" action="https://localhost:8000/details">

                <input type="hidden" id="xid" name="xid" value=<%=xid %>>
                <input type="hidden" id="baseUrl" name="baseUrl" value=<%=uri %>>
                <input class="mb-3" type="submit" value="Scegli" size="30">
            </form>
        <% } else { %>
            <form method="GET" action="https://localhost:8000/newfeedback">
                <input type="hidden" id="baseUrl" name="baseUrl" value=<%=uri %>>
                <input class="mb-3" type="submit" value="Scegli" size="30">
            </form>
        <% } %>

    <% } %>
    </ul> 
    <% var nextpg = info.nextPageToken; %>
    <% if (xid!=undefined && xid!=''){ %>
        <form method="GET" action="https://localhost:8000/googlephotosapi">

            <input type="hidden" id="xid" name="xid" value=<%=xid %>>
            <input type="hidden" id="nextpg" name="nextpg" value=<%=info.nextPageToken %>>
            <input class="mb-3" type="submit" value="NEXT PAGE" size="30">
        </form>
    <% } else { %>
        <form method="GET" action="https://localhost:8000/googlephotosapi"> 
            <input type="hidden" id="nextpg" name="nextpg" value=<%=info.nextPageToken %>>
            <input type="hidden" id="stato" name="stato" value="feed">
            <input class="mb-3" type="submit" value="NEXT PAGE" size="30">
        </form>
    <% } %>
    
</html>